%articles
  %h1 Blog x articles
  %table
    %tr
      / %th Content
      %th Name
      %th Title
      %th Tags
      %th Category
      %th User
      %th
      %th
      %th

    - @articles.each do |article|
      %tr
        / %td{:id => "article"}= article.content
        %td= article.name
        %td= article.title
        %td= article.tags
        %td= article.category
        %td= article.user_id
        %td{:class => "btn"}= link_to 'Show', article
        %td{:class => "btn"}= link_to 'Edit', edit_article_path(article)
        %td{:class => "btn"}= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete

%br

  %li{:class => "btn"}= link_to 'New Article', new_article_path
  %li{:class => "btn"}= link_to 'Blogs List', blogs_path
